<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_product_display"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adil.cattledata.Product_display">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#c18c98">
        <ImageView
            android:id="@+id/putImg"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="17dp"
            android:layout_below="@+id/head"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/head"
            android:text="PRODUCT_INFORMATION"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#81122f"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/putImg" />

        <TextView
            android:id="@+id/cattle_no"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:background="#81122f"
            android:textColor="#ffffff"
            android:layout_marginStart="130dp"
            android:textSize="20dp"
            android:layout_marginTop="165dp"/>
        <TextView
            android:text="P_ID"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="165dp"/>

        <TextView
            android:id="@+id/breed"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:background="#81122f"
            android:textColor="#ffffff"
            android:layout_marginStart="130dp"
            android:textSize="20dp"
            android:layout_marginTop="205dp"/>
        <TextView
            android:text="P_NAME"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="205dp"/>

        <TextView
            android:id="@+id/dob"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:background="#81122f"
            android:textColor="#ffffff"
            android:layout_marginStart="130dp"
            android:textSize="20dp"
            android:layout_marginTop="245dp"/>
        <TextView
            android:text="QUANTITY"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="245dp"/>
        <TextView
            android:id="@+id/d_0f_purchase"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:background="#81122f"
            android:textColor="#ffffff"
            android:layout_marginStart="130dp"
            android:textSize="20dp"
            android:layout_marginTop="285dp"/>
        <TextView
            android:text="DISRIPTION"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="285dp"/>
        <TextView
            android:id="@+id/cost"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:background="#81122f"
            android:textColor="#ffffff"
            android:layout_marginStart="130dp"
            android:textSize="20dp"
            android:layout_marginTop="375dp"/>
        <TextView
            android:text="PRICE"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="375dp"/>
        <Button
            android:id="@+id/place_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:text="PLACE ORDER"
            android:layout_marginTop="420dp"/>

    </RelativeLayout>
</ScrollView>
