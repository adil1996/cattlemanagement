<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adil.cattledata.result">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Spinner
            android:id="@+id/dt_selecter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Spinner>
        <Button
            android:text="GENERATE MILK YIELD REPORT"
            android:id="@+id/generate_report1"
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="GENERATE INCOME REPORT"
            android:id="@+id/generate_report2"
            android:layout_marginTop="130dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:text="GENERATE EXPENCES REPORT"
            android:id="@+id/generate_report3"
            android:layout_marginTop="180dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/report1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/generate_report3"/>

    </RelativeLayout>
</ScrollView>

</RelativeLayout>
