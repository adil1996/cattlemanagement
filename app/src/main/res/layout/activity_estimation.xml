<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_estimation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/r2"
    tools:context="com.example.adil.cattledata.estimation">

    <Button
        android:text="Income Estimation graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/e_income"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="166dp" />

    <Button
        android:text="Expence estimation graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/e_expence"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/dp"
        android:hint="Enter the date"
        android:layout_marginTop="100dp" />
</RelativeLayout>
