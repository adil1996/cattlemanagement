<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adil.cattledata.Register"
    android:background="@drawable/r1">



        <EditText
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:background="#000000"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:layout_marginLeft="35dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Enter the password"
            android:layout_marginTop="130dp"
            android:id="@+id/password"
            />

        <EditText
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:background="#000000"
            android:textColorHint="#ffffff"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:textColor="#ffffff"
            android:hint= "Enter the e-mail address"
            android:id="@+id/email"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="210dp" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:background="#000000"
            android:textColorHint="#ffffff"
            android:inputType="textPassword"
            android:ems="10"
            android:layout_marginLeft="35dp"
            android:textColor="#ffffff"
            android:hint="re-Enter the password"
            android:layout_marginTop="170dp"
            android:id="@+id/repassword" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:background="#000000"
            android:textColorHint="#ffffff"
            android:inputType="phone"
            android:ems="10"
            android:textColor="#ffffff"
            android:hint="Enter the mobile number"
            android:layout_marginTop="250dp"
            android:id="@+id/mob_no."
            android:layout_marginLeft="35dp"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:background="#000000"
            android:textColorHint="#ffffff"
            android:inputType="textPersonName"
            android:hint="Enter the username"
            android:textColor="#ffffff"
            android:ems="10"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="90dp"
            android:id="@+id/username"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="SignUp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/regiteration"
            android:layout_marginTop="31dp"
            android:layout_below="@+id/mob_no."
            android:layout_centerHorizontal="true" />


</RelativeLayout>
