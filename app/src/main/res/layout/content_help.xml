<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.adil.cattledata.help"
    tools:showIn="@layout/activity_help"
    android:background="@drawable/help1">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="INSTRUCTION"
    android:textColor="#000000"
    android:layout_marginTop="20dp"
    android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="288dp"
        android:layout_height="326dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="50dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:text="Touch the Menu button on top left to open left navigation menu.
  ->Start by adding cattle by tapping
       CATTLE INFORMATION.
   ->Retrieve the data by clicking on
       CATTLE LIST of particular cattle
       with the help of cattle id.
   ->Tap on EXPENSES or INCOME in
       left Menu to add or edit
        daily expenses or income.
   ->Tap on various REPORT link to
       generate reports.
   ->Tap on PROFIT_AND_LOSS to
      analyse the profit and loss."
        android:textSize="17dp" />
    </RelativeLayout>
</ScrollView>

</RelativeLayout>
